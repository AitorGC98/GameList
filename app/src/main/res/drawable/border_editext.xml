<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de sombra -->
    <item>
        <shape>
            <solid android:color="#55000000"/> <!-- Color negro con opacidad -->
            <corners android:radius="8dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
        </shape>
    </item>

    <!-- Capa del fondo -->
    <item android:top="4dp" android:left="4dp">
        <shape>

            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>